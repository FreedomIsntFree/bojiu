<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Activity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 设置窗口进入和退出动画样式为null，即没有动画效果-->
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 设置窗口背景为透明色-->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置导航栏（底部操作栏）的颜色为透明-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 设置状态栏的颜色为透明-->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- 设置状态栏图标和文字为浅色，适应亮色背景。-->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 在系统版本为Android Q及以上时，禁止强制启用暗黑模式-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- 强制设置活动为竖屏模式，即始终以垂直方向显示。-->
        <item name="android:screenOrientation">portrait</item>
        <!-- 启用窗口之间的活动转场动画。-->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashActivity" parent="Activity">
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>