<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Activity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 设置窗口进入和退出动画样式为null，即没有动画效果-->
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 设置窗口背景为透明色-->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 设置导航栏（底部操作栏）的颜色为透明-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 设置状态栏的颜色为透明-->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- 设置状态栏图标和文字为浅色，适应亮色背景。-->
        <item name="android:windowLightStatusBar">true</item>
        <!-- 在系统版本为Android Q及以上时，禁止强制启用暗黑模式-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- 强制设置活动为竖屏模式，即始终以垂直方向显示。-->
        <item name="android:screenOrientation">portrait</item>
        <!-- 启用窗口之间的活动转场动画。-->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashActivity" parent="Activity">
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="naviButton" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/color_green</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="naviButton_title_active">
        <item name="android:textSize">10sp</item>
    </style>
    <!--没有选中的样式，导航默认的字体大小就是12sp-->
    <style name="naviButton_title_inactive">
        <item name="android:textSize">10sp</item>
    </style>

</resources>